{
  "manifest_version": 3,
  "name": "Ivelt Topic Hider",
  "version": "1.0.1",
  "description": "Hide and manage forum topics on Ivelt. Includes a hidden vault at the bottom to keep your feed clean.",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.ivelt.com/forum/viewforum.php*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
